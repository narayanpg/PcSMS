@page
@model PcSMS.Pages.Vessels.EditModel
@{
	ViewData["Title"] = "Edit";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Vessel Details</h2>
<br />
<form method="post">
	<div class=" border  backgroundWhite">
		<input type="hidden" asp-for="Vessel.Id" />
		<input type="hidden" asp-for="Vessel.UserId" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group row ">
			<div class="col-2">
				<label asp-for="Vessel.IN" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="Vessel.IN" class="form-control" />
			</div>
			<span asp-validation-for="Vessel.IN" class="text-danger"></span>
		</div>
		
		<div class="form-group row ">
			<div class="col-2">
				<label asp-for="Vessel.Model" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="Vessel.Model" class="form-control" />
			</div>
			<span asp-validation-for="Vessel.Model" class="text-danger"></span>
		</div>
		
		<div class="form-group row ">
			<div class="col-2">
				<label asp-for="Vessel.Year" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="Vessel.Year" class="form-control" />
			</div>
			<span asp-validation-for="Vessel.Year" class="text-danger"></span>
		</div>
		
		<div class="form-group row ">
			<div class="col-2">
				<label asp-for="Vessel.Color" class="col-form-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="Vessel.Color" class="form-control" />
			</div>
			<span asp-validation-for="Vessel.Color" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-5 offset-2">
				<div class="row">
					<div class="col-6">
						<input type="submit" class="btn btn-info form-control" value="Update" />
					</div>
					<div class="col-6">
						<a asp-page="Index" asp-route-userId="@Model.Vessel.UserId" class="btn btn-success form-control">Back to List</a>
					</div>
				</div>

			</div>
		</div>
	</div>
</form>
@section Scripts{
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


