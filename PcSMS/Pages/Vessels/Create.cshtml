@page
@model PcSMS.Pages.Vessels.CreateModel
@{
	ViewData["Title"] = "Create";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Add New Vessel</h2>
<br />
<form method="post">
	<div class="border backgroundWhite">
		<input hidden asp-for="Vessel.UserId" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Vessel.IN"></label>
			</div>
			<div class="col-5">
				<input asp-for="Vessel.IN" class="form-control" />
			</div>
			<span asp-validation-for="Vessel.IN" class="text-danger"></span>
		</div>
		
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Vessel.Model"></label>
			</div>
			<div class="col-5">
				<input asp-for="Vessel.Model" class="form-control" />
			</div>
			<span asp-validation-for="Vessel.Model" class="text-danger"></span>
		</div>
		
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Vessel.Year"></label>
			</div>
			<div class="col-5">
				<input asp-for="Vessel.Year" class="form-control" />
			</div>
			<span asp-validation-for="Vessel.Year" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Vessel.Color"></label>
			</div>
			<div class="col-5">
				<input asp-for="Vessel.Color" class="form-control" />
			</div>
			<span asp-validation-for="Vessel.Color" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-5 offset-2">
				<partial name="_CreateAndBackToListButton" />
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

