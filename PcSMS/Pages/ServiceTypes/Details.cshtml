@page
@model PcSMS.Pages.ServiceTypes.DetailsModel
@using PcSMS.Utility
@{
	ViewData["Title"] = "Details";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Service Type Details</h2>
<br />
<div class=" border  backgroundWhite">
	<div class="form-group row">
		<div class="col-2">
			<label asp-for="ServiceType.Name"></label>
		</div>
		@if ((User.IsInRole(Who.Admin)) || (User.IsInRole(Who.Staff)))
		{
			<div class="col-5">
				<input asp-for="ServiceType.Name" disabled class="form-control" />
			</div>
		}
		else
		{
			<div class="col-5">
				<input readonly asp-for="ServiceType.Name" disabled class="form-control" />
			</div>
		}
	</div>
	<div class="form-group row">
		<div class="col-2">
			<label asp-for="ServiceType.Price"></label>
		</div>
		@if ((User.IsInRole(Who.Admin)) || (User.IsInRole(Who.Staff)))
		{
			<div class="col-5">
				<input asp-for="ServiceType.Price" disabled class="form-control" />
			</div>
		}
		else
		{
			<div class="col-5">
				<input readonly asp-for="ServiceType.Price" disabled class="form-control" />
			</div>
		}

	</div>
	<div class="form-group row">
		<div class="col-5 offset-2">
			<div class="row">
				@if ((User.IsInRole(Who.Admin)) || (User.IsInRole(Who.Staff)))
				{
					<div class="col-6">
						<a asp-page="Edit" asp-route-id="@Model.ServiceType.Id" class="btn btn-info form-control">Edit</a>
					</div>
				}
				<div class="col-6">
					<a asp-page="Index" class="btn btn-success form-control">Back to List</a>
				</div>
			</div>

		</div>
	</div>

</div>
